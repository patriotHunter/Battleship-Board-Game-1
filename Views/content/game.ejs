<link rel="stylesheet" href="css/game.css">
<!-- vue  template -->
<template id="board-template">
    <table id='allyside'>
        <tr v-for="n in rows">
            <template v-for="i in columns">
                <td id="{{ n == 0 ? i : n + '' + i}}" class="tile" onclick="tileClick( {{ n == 0 ? i : n + '' + i}} )">
                </td>
            </template>
        </tr>
    </table>
</template>

<template id="enemyBoard-template">
    <table id='enemyside'>
        <tr v-for="n in rows">
            <template v-for="i in columns">
                <td id="enemy_{{ n == 0 ? i : n + '' + i}}" class="tile"
                    onclick="tileEnemyClick( {{ n == 0 ? i : n + '' + i}} )"></td>
            </template>
        </tr>
    </table>
</template>

<div id='joinroom'>
    <div class='main-buttons-wrapper'>
        <button class='main-buttons' onclick="joinRoom()">Join Room!</button>
        <% if(status){%>
        <button class='main-buttons' onclick="Load()">Load</button>
        <%}%>
    </div>
</div>
<!-- infoBoard -->
<div id='infoBoard'>
    <div id='my-state'>Not Ready</div>
    <div id='turn'></div>
    <div id='nameRoom'></div>
    <div id='nameEnemy'></div>
    <div id='foe-state'>Not Ready</div>
</div>
<!-- game -->
<div id="main_game">
    <div id="boards">
        <board :columns="9" :rows="9"></board>
        <enemy-board :columns="9" :rows="9"></enemy-board>
    </div>
</div>
<div id='shipspawn'></div>
<br>
<% if(status){%>
    <input type="hidden" id="mail" value='<%=email%>'>
        <div id='savegame'><button id='save' onClick=save()>Save Game</buton>
        </div>
        <%}%>



<script type="text/javascript" src="js/game.js"></script>