<link rel="stylesheet" href="css/game.css">
<!-- vue  template -->
<template id="board-template">
    <table border="1">
        <tr v-for="n in rows">
            <template v-for="i in columns">
                <td data-coordination="{{ n == 0 ? i : n + '' +i}}"" class=" tile"></td>
            </template>
        </tr>
    </table>
</template>

<template id="enemyBoard-template">
    <table border="1">
        <tr v-for="n in rows">
            <template v-for="i in columns">
                <td enemyCoordination="{{ n == 0 ? i : n + '' +i}}" class="tile"></td>
            </template>
        </tr>
    </table>
</template>


<!-- game -->
<div id="main_game">
    <div id="boards">
            <board :columns="9" :rows="9"></board>
            <enemy-board :columns="9" :rows="9"></enemy-board>
    </div>
</div>
<script type="text/javascript" src="js/game.js"></script>

<script>

    window.addEventListener('load', init);
    window.addEventListener('resize', init);

    function init() {
        var tds = document.getElementsByTagName('td');
        var tdWidth = tds[0].clientWidth;
        for (i = 0; i < tds.length; i++) {
            tds[i].style.height = tdWidth + 'px';
        }
    }

</script>